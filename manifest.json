{
    "manifest_version": 3,
    "name": "Grokipedia Redirect",
    "version": "1.0.1",
    "description": "Create links to Grokipedia pages",
    "permissions": [
        "activeTab",
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "https://*.wikipedia.org/*",
        "https://grokipedia.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}
